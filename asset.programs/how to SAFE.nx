REFRESH:

'COMPUTE SAFE CORNERS
X1=0+SAFE.L
Y1=0+SAFE.T
X2=SHOWN.W-SAFE.R
Y2=SHOWN.H-SAFE.B

'PLACE ARROW SPRITES
SPRITE 0,X1,Y1,1
SPRITE 0 SIZE 1
SPRITE 1,X2-16,Y2-16,1
SPRITE 1 SIZE 1 FLIP 1,1

CLS 0

'PRINT COORDS WHER ARROW POINTING AT
TEXT X1\8,Y1\8+2,STR$(X1)+"X"+STR$(Y1)
BR$=STR$(X2)+"X"+STR$(Y2)
TEXT X2\8-LEN(BR$),Y2\8-3,BR$

WINDOW 2,6,SHOWN.W\8-4,SHOWN.H\8-12,0
PRINT "DEMONSTRATE HOW TO USE SHOWN + SAFE TO DETERMINE WHERE TO DISPLAY THE ARROWS IN THE CORNERS."
PRINT
PRINT "SHOWN:"+STR$(SHOWN.W)+","+STR$(SHOWN.H)
PRINT
PRINT "SAFE:"+STR$(SAFE.L)+","+STR$(SAFE.T)+","+STR$(SAFE.R)+","+STR$(SAFE.B)

'USED TO DETECT RESIZE CHANGES
OLDW=SHOWN.W
OLDH=SHOWN.H

DO
  IF OLDW<>SHOWN.W OR OLDH<>SHOWN.H THEN GOTO REFRESH
  WAIT VBL
LOOP

