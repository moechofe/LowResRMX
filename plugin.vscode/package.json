{
    "name": "lowresrmx",
    "displayName": "LowResRMX",
    "description": "Language support for LowResRMX Basic.",
    "version": "0.0.0",
    "publisher": "moechofe",
    "icon": "images/icon.png",
    "author": "Marc Schraffenberger + Martin Mauchauff√©e",
    "license": "MIT",
    "homepage": "https://github.com/schraf/lowresrmx-visualstudiocode-ext#readme",
    "engines": {
        "vscode": "^1.50.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "rmx",
                "aliases": [
                    "LowResRMX Basic",
                    "rmx"
                ],
                "extensions": [
                    ".rmx"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "rmx",
                "scopeName": "source.rmx",
                "path": "./syntaxes/rmx.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "lowResRMX.runFile",
                "title": "Run File",
                "category": "LowResRMX"
            }
        ],
        "configuration": {
            "title": "LowResRMX",
            "properties": {
                "lowResRMX.run.fullScreen": {
                    "type": "boolean",
                    "default": false,
                    "description": "Start the application in fullscreen mode."
                },
                "lowResRMX.run.disableDelay": {
                    "type": "boolean",
                    "default": false,
                    "description": "Disable the delay for too short frames."
                },
                "lowResRMX.run.disableDev": {
                    "type": "boolean",
                    "default": false,
                    "description": "Disable the Development Menu, Esc key quits LowRes RMX."
                },
                "lowResRMX.run.zoom": {
                    "type": "string",
                    "default": "pixel perfect",
                    "enum": [
                        "pixel perfect",
                        "large",
                        "overscan",
                        "squeeze"
                    ],
                    "description": "Start the application in zoom mode."
                }
            }
        }
    },
    "activationEvents": [
        "onLanguage:rmx",
        "onCommand:lowResRNX.runFile"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.34.0",
        "@typescript-eslint/eslint-plugin": "^4.4.1",
        "@typescript-eslint/parser": "^4.4.1",
        "eslint": "^7.11.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "typescript": "^4.0.2"
    }
}
